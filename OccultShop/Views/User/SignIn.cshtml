
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Header.cshtml";
}

<body class="center freakshowText">
    <h1>Welcome</h1>

    <form method="post">
        <div class="signin-form">
            Username <input for="username" type="text" name="username" size="35"/>
        </div>
        <div class="signin-form">
            Password <input for="password" type="password" name="password" size="35" />
        </div>
    </form>

    Need an Account?
    <a asp-action="UserSignUpInfo"><br />Sign Up!</a>

    <div class="small-eye">
            <img src="~/img/eye3.png" />
    </div>

    <a asp-action="Admin" asp-controller="Admin">
        <button>Admin Page</button>
    </a>
        
        
</body>


