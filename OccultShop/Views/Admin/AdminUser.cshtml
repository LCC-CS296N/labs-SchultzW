@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "AdmiUser";
    Layout = "~/Views/Shared/_Header.cshtml";
}

    <body>
        <div>
            <h1>Manage Users</h1>
        </div>
        <div>
            <a asp-action="CreateUser"> Add New User</a>
        </div>
        <br>
        @if(Model.Count()==0)
        {
            <tr><td colspan="3"class="text-center freakshowText"></td>There are no users</tr>
        }
        else
        {
            foreach(AppUser user in Model)
            {
                <table class="table table-sm table-bordered">
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="Delete" asp-route="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit"
                                   asp-route-id="@user.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>

                </table>
            }
        }





    </body>


