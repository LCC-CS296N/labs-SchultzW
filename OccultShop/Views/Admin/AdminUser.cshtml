@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "AdmiUser";
    Layout = "~/Views/Shared/_Header.cshtml";
}

    <body>
        <div>
            <h1>Manage Users</h1>
        </div>
        <div>
            <a asp-action="CreateUser"> Add New User</a>
        </div>
        <br>
        <div class="contrainer">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First</th>
                        <th>Last</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AppUser user in Model)
                    {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn" asp-action="EditUser"
                                   asp-route-id="@user.Id">Edit</a>
                                <button type="submit"
                                        class="btn">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>


            </table>
